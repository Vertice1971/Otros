<script>
  function reloadGame() {
    window.location.reload();
  }

  // Array de 17 preguntas basadas en la tem√°tica dada
  const preguntasCompletas = [
    { 
      pregunta: "¬øQu√© le pidi√≥ Dios a Abraham?",
      correcta: "Que saliera de su tierra.",
      opciones: ["Que construyera un barco.", "Que saliera de su tierra.", "Que se hiciera rey de Egipto."]
    },
    { 
      pregunta: "¬øQu√© tierra prometi√≥ Dios a Abraham y su descendencia?",
      correcta: "Cana√°n.",
      opciones: ["Egipto.", "Cana√°n.", "Babilonia."]
    },
    { 
      pregunta: "¬øCon qui√©n viaj√≥ Abraham cuando sali√≥ de su tierra?",
      correcta: "Con su esposa Sara y su sobrino Lot.",
      opciones: ["Con su esposa Sara y su sobrino Lot.", "Con sus amigos y soldados.", "Con Mois√©s y Aar√≥n."]
    },
    { 
      pregunta: "¬øQu√© hizo Abraham al llegar a Cana√°n para agradecer a Dios?",
      correcta: "Construy√≥ un altar.",
      opciones: ["Construy√≥ un altar.", "Hizo una fiesta.", "Escribi√≥ un libro."]
    },
    { 
      pregunta: "¬øQu√© le prometi√≥ Dios a Abraham sobre su descendencia?",
      correcta: "Que ser√≠an tan numerosos como las estrellas.",
      opciones: ["Que ser√≠an pocos, pero muy fuertes.", "Que ser√≠an tan numerosos como las estrellas.", "Que gobernar√≠an el mundo entero."]
    },
    { 
      pregunta: "¬øC√≥mo se llamaba el hijo que Abraham tuvo en su vejez?",
      correcta: "Isaac.",
      opciones: ["Mois√©s.", "Isaac.", "David."]
    },
    { 
      pregunta: "¬øC√≥mo se llamaban los dos hijos gemelos de Isaac y Rebeca?",
      correcta: "Esa√∫ y Jacob.",
      opciones: ["Jos√© y Benjam√≠n.", "Mois√©s y Aar√≥n.", "Esa√∫ y Jacob."]
    },
    { 
      pregunta: "¬øQu√© le dio Esa√∫ a Jacob a cambio de un plato de lentejas?",
      correcta: "Su primogenitura.",
      opciones: ["Su primogenitura.", "Su reba√±o de ovejas.", "Su espada."]
    },
    { 
      pregunta: "¬øC√≥mo consigui√≥ Jacob la bendici√≥n de su padre Isaac?",
      correcta: "Con la ayuda de su madre, enga√±√°ndolo.",
      opciones: ["Ganando una batalla.", "Con la ayuda de su madre, enga√±√°ndolo.", "Haciendo un sacrificio en un altar."]
    },
    { 
      pregunta: "¬øPor qu√© tuvo que huir Jacob de su casa?",
      correcta: "Porque Esa√∫ quer√≠a hacerle da√±o.",
      opciones: ["Porque Esa√∫ quer√≠a hacerle da√±o.", "Porque rob√≥ un tesoro.", "Porque se perdi√≥ en el bosque."]
    },
    { 
      pregunta: "¬øQu√© le dijo Dios a Jacob en un sue√±o?",
      correcta: "\"No temas, Jacob. Yo estar√© contigo.\"",
      opciones: ["\"No temas, Jacob. Yo estar√© contigo.\"", "\"Construye un templo en mi honor.\"", "\"Ve a Egipto y s√© su rey.\""]
    },
    { 
      pregunta: "¬øQu√© nuevo nombre le dio Dios a Jacob?",
      correcta: "Israel.",
      opciones: ["Mois√©s.", "Israel.", "Salom√≥n."]
    },
    { 
      pregunta: "¬øCu√°ntos hijos tuvo Jacob, que ser√≠an los antepasados de las tribus de Israel?",
      correcta: "Doce.",
